<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/productFragment">

    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.btlon.Ui.Home.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/home_product_fragment" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.btlon.Ui.Home.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/home_cart_fragment" />
    <fragment
        android:id="@+id/saleFragment"
        android:name="com.example.btlon.Ui.Home.SaleFragment"
        android:label="fragment_sale"
        tools:layout="@layout/home_sale_fragment" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.btlon.Ui.Home.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/home_user_fragment">
        <action
            android:id="@+id/action_userFragment_to_userAddressFragment"
            app:destination="@id/userAddressFragment" />
        <action
            android:id="@+id/action_userFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
        <action
            android:id="@+id/action_userFragment_to_userOderFragment"
            app:destination="@id/userOderFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.example.btlon.UserLayoutAction.UserInfoFragment"
        android:label="fragment_user_info"
        tools:layout="@layout/fragment_user_info" />
    <fragment
        android:id="@+id/userAddressFragment"
        android:name="com.example.btlon.UserLayoutAction.UserAddressFragment"
        android:label="fragment_user_address"
        tools:layout="@layout/fragment_user_address" />
    <fragment
        android:id="@+id/userOderFragment"
        android:name="com.example.btlon.UserLayoutAction.UserOderFragment"
        android:label="fragment_user_oder"
        tools:layout="@layout/fragment_user_oder" />
</navigation>