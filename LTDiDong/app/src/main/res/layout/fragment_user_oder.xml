<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bkg_color"
    tools:context=".UserLayoutAction.UserOderFragment">
    <Button
        android:id="@+id/btUserOrderBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:background="@drawable/squre_shape"
        app:backgroundTint="@null"
        android:drawableLeft="@drawable/arrow_left_icon"/>


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_shape_stroke_black"
        android:padding="10dp"
        android:text="Thông tin hóa đơn"
        android:textAlignment="center"
        android:textSize="25dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>


</LinearLayout>