<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLayoutAction.UserFeedBackFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btUserIFeedBackBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:background="@drawable/squre_shape"
            app:backgroundTint="@null"
            android:drawableLeft="@drawable/arrow_left_icon"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_shape_stroke_black"
            android:padding="10dp"
            android:text="Thông tin tài khoản"
            android:textAlignment="center"
            android:textSize="25dp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anh"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chị"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Họ và tên"
                android:background="@color/white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bkg"
                android:hint="Nhập họ và tên"
                android:padding="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Góp  / Liên hệ"
                android:background="@color/white"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edittext_bkg"
                android:hint="Nhập thông tin "
                android:gravity="top"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:overScrollMode="always"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gửi thông tin"
                android:layout_marginTop="15dp"/>


        </LinearLayout>



    </LinearLayout>

</ScrollView>