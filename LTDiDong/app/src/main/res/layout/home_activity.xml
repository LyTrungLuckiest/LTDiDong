<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Phần Top (sẽ tự điều chỉnh theo nội dung bên trong) -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#7EF483"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/midSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/logo_icon" />

            <Button
                android:id="@+id/btnGps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_background"
                android:text="Chọn vị trí bạn muốn giao"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                app:icon="@android:drawable/ic_dialog_map"
                app:iconGravity="textEnd"
                app:iconSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/toolbar_background"
            android:orientation="horizontal"
            android:paddingEnd="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/custom_button"
                    android:contentDescription="Menu"
                    android:scaleType="center"
                    android:src="@drawable/menu" />

                <SearchView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_bkg"
                    android:paddingTop="4dp" />

                <ImageButton
                    android:id="@+id/btnGiongnoi"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/custom_button"
                    android:contentDescription="Giọng nói"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_btn_speak_now" />

                <ImageButton
                    android:id="@+id/btnGiohang"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/custom_button"
                    android:contentDescription="Giỏ hàng"
                    android:scaleType="center"
                    android:src="@drawable/shoppingcart2" />

                <ImageButton
                    android:id="@+id/btnThongbao"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/custom_button"
                    android:contentDescription="Thông báo"
                    android:scaleType="center"
                    android:src="@drawable/notification" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Phần Mid  -->

    <!-- Phần Bottom (sẽ tự điều chỉnh theo nội dung bên trong) -->

    <LinearLayout
        android:id="@+id/midSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottomSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topSection"> <!-- Mid chiếm 65% chiều cao màn hình -->


        <fragment
            android:id="@+id/fragmentContainerViewHome"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_home" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/midSection">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/homemenu" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>