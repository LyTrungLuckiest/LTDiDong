<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@drawable/item_bkg">
    <TextView
        android:id="@+id/tvCategoryIdOrderByCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textAlignment="center"
        android:text="category id"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/square_shape_stroke_black"/>
    <TextView
        android:id="@+id/tvTotalOrderOrderbyCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textAlignment="center"
        android:text="so luong don dat"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/square_shape_stroke_black"/>

</LinearLayout>