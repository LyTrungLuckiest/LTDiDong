<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4CAF50"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/btnGps"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#388E3C"
                android:text="Chon vi tri muon giao"
                android:textColor="#FFFFFF"
                app:icon="@android:drawable/ic_dialog_map"
                app:iconGravity="textEnd"
                app:iconSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnMenu"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text=""
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="#0BED14"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTimkiem"
                android:layout_width="150dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:ems="10"
                android:hint="Tìm kiếm sản phẩm"
                android:inputType="text" />

            <Button
                android:id="@+id/btnGiongnoi"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text=" "
                app:icon="@android:drawable/ic_btn_speak_now"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="#0BED14"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnGiohang"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="center"
                app:icon="@drawable/shoppingcart"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="#0BED14"
                tools:ignore="SpeakableTextPresentCheck"/>

            <Button
                android:id="@+id/btnThongbao"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:gravity="center"
                app:icon="@drawable/off"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="#0BED14"
                tools:ignore="SpeakableTextPresentCheck"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="647dp"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="sản phẩm"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                app:icon="@drawable/menubutton"
                app:iconGravity="textTop"
                app:iconTint="#4CAF50" />

            <Button
                android:id="@+id/btnKhuyenmai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="khuyen mai"
                android:textColor="#4CAF50"
                app:icon="@drawable/discount"
                app:iconGravity="textTop"
                app:iconTint="#4CAF50" />

            <Button
                android:id="@+id/btnTichdiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="tích diem"
                android:textColor="#4CAF50"
                app:icon="@drawable/qr"
                app:iconGravity="textTop"
                app:iconTint="#4CAF50" />

            <Button
                android:id="@+id/btnGH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Gio hàng"
                android:textColor="#4CAF50"
                app:icon="@drawable/shoppingcart"
                app:iconGravity="textTop"
                app:iconTint="#4CAF50" />

            <Button
                android:id="@+id/btnTaikhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Tài khoản"
                android:textColor="#4CAF50"
                app:icon="@drawable/user"
                app:iconGravity="textTop"
                app:iconTint="#4CAF50" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>