<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Phần Top (sẽ tự điều chỉnh theo nội dung bên trong) -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#05F40F"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/midSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Nội dung bên trong phần top (ví dụ logo và thanh tìm kiếm) -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/logo_icon" />

            <Button
                android:id="@+id/btnGps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="6"
                android:backgroundTint="#4CAF50"
                android:paddingTop="10dp"
                android:text="Chọn vị trí bạn muốn giao"
                android:textColor="#FFFFFF"
                app:icon="@android:drawable/ic_dialog_map"
                app:iconGravity="textEnd"
                app:iconSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/toolbar_background"
            android:orientation="horizontal"
            android:paddingEnd="5dp">


            <Button
                android:id="@+id/btnMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:backgroundTint="@color/white"
                android:contentDescription="Menu"
                android:gravity="center_vertical"
                app:icon="@drawable/menu"
                app:iconSize="30dp"
                app:iconTint="#0BED14" />

            <EditText
                android:id="@+id/editTimkiem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:ems="10"
                android:hint="Tìm kiếm"

                android:inputType="text" />

            <Button
                android:id="@+id/btnGiongnoi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="Giọng nói"
                app:icon="@android:drawable/ic_btn_speak_now"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="#0BED14" />

            <Button
                android:id="@+id/btnGiohang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="Giỏ hàng"
                android:gravity="center"
                app:icon="@drawable/shoppingcart2"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="#0BED14" />

            <Button
                android:id="@+id/btnThongbao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:contentDescription="Thông báo"
                android:gravity="center"
                app:icon="@drawable/off"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="#0BED14" />

        </LinearLayout>
        <!-- Thêm nội dung tùy thích ở đây -->
    </LinearLayout>

    <!-- Phần Mid (chiếm 60-70% chiều cao màn hình) -->
    <LinearLayout
        android:id="@+id/midSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/topSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHeight_percent="0.75"> <!-- Mid chiếm 65% chiều cao màn hình -->

        <!-- Nội dung chính bên trong phần mid (ví dụ RecyclerView, ScrollView) -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ViewFlipper
                    android:id="@+id/viewFlipper"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white">


                </ViewFlipper>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Sản phẩm mới nhất"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
            <!-- Thêm nội dung tùy thích ở đây -->
        </ScrollView>
    </LinearLayout>

    <!-- Phần Bottom (sẽ tự điều chỉnh theo nội dung bên trong) -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/midSection">

        <!-- Nội dung bên trong phần bottom (ví dụ thanh điều hướng) -->

        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/store"
            android:text="Sản Phẩm"
            android:textColor="@color/text_color"
            android:textSize="10sp" />

        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/percent"
            android:text="Khuyến mãi"
            android:textColor="@color/text_color"
            android:textSize="10sp" />

        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/scan"
            android:text="Quét "
            android:textColor="@color/text_color"
            android:textSize="10sp" />


        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/shoppingcart2"
            android:text="Giỏ hàng"
            android:textColor="@color/text_color"
            android:textSize="10sp" />


        <Button

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/account"
            android:text="Tài khoản"
            android:textColor="@color/text_color"
            android:textSize="10sp" />
        <!-- Thêm nội dung tùy thích ở đây -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
