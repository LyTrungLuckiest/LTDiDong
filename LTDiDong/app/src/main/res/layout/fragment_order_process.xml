<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderStatistic.OrderProcess">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_shape_stroke_black"
            android:padding="10dp"
            android:text="Xử lý hóa đơn"
            android:textAlignment="center"
            android:textSize="25sp" />

        <!-- RecyclerView (takes the remaining space) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewOrderProcess"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp" />
        <Button
            android:id="@+id/btBackOrderProcess"
            android:layout_gravity="center|bottom"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bkg"
            android:text="Thoát"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            app:backgroundTint="@null"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            />


    </LinearLayout>


</FrameLayout>