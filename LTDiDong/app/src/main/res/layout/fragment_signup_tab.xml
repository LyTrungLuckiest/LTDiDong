<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginTabFragment">

    <!-- Phần ScrollView bao quanh tất cả nội dung cần cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView chứa icon trái cây -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"

                android:contentDescription="Main Icon"
                android:src="@drawable/logo_icon" />

            <!-- EditText cho tên đăng nhập -->
            <EditText
                android:id="@+id/signup_user"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/user1"
                android:drawablePadding="8dp"
                android:hint="Tên đăng nhập"
                android:inputType="text"
                android:maxLines="1" />

            <!-- EditText cho mật khẩu -->
            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:maxLines="1" />

            <EditText
                android:id="@+id/signup_passwor_checkout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="8dp"
                android:hint="Nhập lại mật khẩu"
                android:inputType="text"
                android:maxLines="1" />

            <!-- Button Login -->
            <Button
                android:id="@+id/btSignup"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button"
                android:backgroundTint="#7EF483"
                android:paddingHorizontal="40dp"
                android:text="Đăng kí"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>


