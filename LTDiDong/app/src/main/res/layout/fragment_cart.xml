<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCEBFB">


    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button"

        android:gravity="center_vertical">

        <!-- Button for navigation or icon -->
        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:background="@drawable/custom_button"
            android:contentDescription="Exit"
            android:scaleType="center"
            android:src="@drawable/arrow_left_icon" />


        <!-- TextView for the title -->
        <TextView
            android:id="@+id/textView22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giỏ Hàng"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Search Bar -->


            <!-- Title and Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/toolbar_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giao Đến"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập thông tin nhận hàng"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siêu thị BXH 99"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- RecyclerView for Cart Items -->

            <!-- Empty Cart Message -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewgiohang"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/toolbar_background" />

            <TextView
                android:id="@+id/txtgiohangtrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Giỏ Hàng Trống"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Total and Payment Section -->
            <LinearLayout
                android:id="@+id/totalContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/item_border">

                <!-- Order Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tiền Hàng"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="75.000đ"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng Đơn Hàng"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="90.000đ"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Payment Method -->


                <!-- Checkout Button -->


            </LinearLayout>

            <LinearLayout
                android:id="@+id/totalContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/user_tab_bot">

                <!-- Order Summary -->




                <!-- Payment Method -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phương thức thanh toán"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <Spinner
                        android:id="@+id/spinnerPaymentMethod"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:text="Đổi phương thức"
                        android:textColor="#C7B3B3"
                        android:backgroundTint="@color/black"/>

                </LinearLayout>

                <!-- Checkout Button -->



                <Button
                    android:id="@+id/buttonCheckout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh Toán"
                    android:backgroundTint="#1DCC18"
                    android:textColor="@color/white"
                    android:textSize="20sp" />




            </LinearLayout>





        </LinearLayout>
    </ScrollView>

</LinearLayout>
